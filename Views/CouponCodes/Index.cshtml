@model IEnumerable<VeeStoreA.Models.CouponCode>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_ThemeLayout.cshtml";
}

@if (TempData["errorAdminCouponC"] != null)
{
    <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading">Error</h4>
        <div class="alert-body">
            @TempData["errorAdminCouponC"]
        </div>
    </div>
}


<section id="ecommerce-header">
    <div class="row">
        <div class="col-sm-12">
            <div class="ecommerce-header-items">
                <div class="col-12">
                    <a type="button" class="btn btn-icon btn-gradient-primary waves-effect waves-float waves-light float-start" href="@Url.Action("AdminPanel", "Home")">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-arrow-left"><line x1="19" y1="12" x2="5" y2="12"></line><polyline points="12 19 5 12 12 5"></polyline></svg>
                    </a>

                    <h2 class="float-start" style="border: 0px; padding: 0px; padding-top: 5px;"> &nbsp; Coupon Codes</h2>
                    <div class="view-options d-flex float-end">
                        @if (User.Identity.Name == "admin@admin.com")
                        {
                            @Html.ActionLink("Add New Coupon Code", "Create", null, new { @class = "btn btn-outline-primary" })
                        }

                    </div>

                </div>
            </div>
        </div>
    </div>
</section>

<br />
<div class="content">
    <div class="content-overlay"></div>
    <div class="header-navbar-shadow"></div>
    <div class="content-wrapper container-xxl p-0">

        <div class="table-responsive" style="padding-bottom: 100px;">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Code</th>
                        <th>Discount Percentage</th>
                        <th>ExpiryDate</th>
                        <th>CreatedAt</th>
                        <th>Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="padding-top: 20px; padding-bottom: 20px;">
                                @item.Code
                            </td>
                            <td>
                                <span class="badge rounded-pill badge-light-success me-1">@item.DiscountPercentage%</span>
                            </td>
                            <td>
                                @item.ExpiryDate
                            </td>
                            <td>
                                @item.CreatedAt
                            </td>
                            <td>
                                        <div class="dropdown">
                                            <button type="button"
                                                    class="btn btn-sm dropdown-toggle hide-arrow py-0 waves-effect waves-float waves-light"
                                                    data-bs-toggle="dropdown" aria-expanded="false">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14"
                                                     viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                                                     stroke-linecap="round" stroke-linejoin="round"
                                                     class="feather feather-more-vertical">
                                                    <circle cx="12" cy="12" r="1"></circle>
                                                    <circle cx="12" cy="5" r="1"></circle>
                                                    <circle cx="12" cy="19" r="1"></circle>
                                                </svg>
                                            </button>
                                            <div class="dropdown-menu dropdown-menu-end">
                                                <a class="dropdown-item" href="@Url.Action("Edit", "CouponCodes" , new {
												id=item.Id })">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14"
                                                         viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                                         stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                                                         class="feather feather-edit-2 me-50">
                                                        <path d="M17 3a2.828 2.828 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5L17 3z">
                                                        </path>
                                                    </svg>
                                                    <span>Edit</span>
                                                </a>
                                                <a class="dropdown-item" href="@Url.Action("Delete", "CouponCodes" , new {
												id=item.Id })">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14"
                                                         viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                                         stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                                                         class="feather feather-trash me-50">
                                                        <polyline points="3 6 5 6 21 6"></polyline>
                                                        <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2">
                                                        </path>
                                                    </svg>
                                                    <span>Delete</span>
                                                </a>
                                            </div>
                                        </div>
                            </td>
                        </tr>


                    }
                </tbody>
            </table>
        </div>
        <!-- E-commerce Products Ends -->

    </div>
</div>