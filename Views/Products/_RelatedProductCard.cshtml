@model VeeStoreA.Models.Product
@{

    int rating = 0;
    if (Model.Ratings.Count() != 0)
    {
        rating = Model.Ratings.Sum(r => r.Stars) / Model.Ratings.Count();
    }


}
<div class="swiper-slide" role="group" aria-label="3 / 5" style="width: 279.5px; margin-right: 55px;">
    <a href="@Url.Action("Details",new { id=Model.Id })">
        <div class="item-heading">
            <h5 class="text-truncate mb-0">@Model.Name</h5>
            <small class="text-body">@Model.Category.Name</small>
        </div>
        <div class="img-container w-50 mx-auto py-75">
            <img src="~/Content/Images/Products/@Model.ImageName" class="img-fluid" alt="image">
        </div>
        <div class="item-meta">
            <ul class="unstyled-list list-inline mb-25">
                <li class="ratings-list-item"><svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-star @(rating>0?"filled-star":"unfilled-star")"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon></svg></li>
                <li class="ratings-list-item"><svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-star @(rating>1?"filled-star":"unfilled-star")"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon></svg></li>
                <li class="ratings-list-item"><svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-star @(rating>2?"filled-star":"unfilled-star")"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon></svg></li>
                <li class="ratings-list-item"><svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-star @(rating>3?"filled-star":"unfilled-star")"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon></svg></li>
                <li class="ratings-list-item"><svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-star @(rating>4?"filled-star":"unfilled-star")"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon></svg></li>
            </ul>
            <p class="card-text text-primary mb-0">@((double)Model.Price * @ViewBag.Mutliplier) @ViewBag.CurrencySymbol</p>
        </div>
    </a>
</div>