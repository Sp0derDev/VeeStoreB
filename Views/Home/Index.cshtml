<div class="divider divider-primary">
    <div class="divider-text"><h3>Check out some of our products!</h3></div>
</div>

<br />
<div class="card-group">
    @foreach (var item in Model)
    {
        <div class="card">
            <center><img class="card-img-top" src="~/Content/Images/Products/@item.ImageName" alt="Card image cap" style="width: 300px; "></center>
            <div class="card-body">
                <h4 class="card-title">@item.Name</h4>
                <p class="card-text">
                    @item.Description
                </p>
            </div>
            <div class="card-footer">
                <a type="button" class="btn btn-gradient-primary" href="@Url.Action("Details", "Products", new { id = item.Id })">Show Product</a>
            </div>
        </div>
    }
</div>


